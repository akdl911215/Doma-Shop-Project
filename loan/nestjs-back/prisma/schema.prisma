// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String      @id @default(uuid()) @db.Uuid
  userId       String      @unique
  nickname     String      @unique
  password     String
  name         String      @db.Text
  phone        String      @unique
  address      String      @db.Text
  isMarketing  Boolean     @default(false)
  refreshToken String?     @db.Text
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  deletedAt    DateTime?
  creditRating Int?
  Debtors      Debtors[]
  Creditors    Creditors[]

  @@map(name: "users")
}

model Loans {
  id                String    @id @default(uuid()) @db.Uuid
  debtorId          String
  debtorUniqueId    String    @db.Uuid
  creditorId        String[]
  creditorUniqueId  String[]    @db.Uuid
  totalAmountLoan   Int
  loanRepaymentDate String
  interest          Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?

  @@map(name: "loans")
}

model Debtors {
  id     String  @id @default(uuid()) @db.Uuid
  debtor  Users   @relation(fields: [debtorUniqueId], references: [id], onDelete: Cascade)
  debtorUniqueId String  @db.Uuid

  @@map(name: "debtors")
}

model Creditors {
  id     String  @id @default(uuid()) @db.Uuid
  creditor  Users[]   @relation(fields: [creditorUniqueId], references: [id], onDelete: Cascade)
  creditorUniqueId String[]  @db.Uuid

  @@map(name: "creditors")
}
