// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String      @id @default(uuid()) @db.Uuid
  userId       String      @unique
  nickname     String      @unique
  password     String
  name         String      @db.Text
  phone        String      @unique
  address      String      @db.Text
  isMarketing  Boolean     @default(false)
  refreshToken String?     @db.Text
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  deletedAt    DateTime?
  creditRating Int
  Debtors      Debtors[]
  Creditors    Creditors[]

  @@map(name: "users")
}

model Loans {
  id                String    @id @default(uuid()) @db.Uuid
  debtors           Debtors   @relation(fields: [debtorId], references: [id])
  debtorId          String    @db.Uuid
  creditors         Creditors @relation(fields: [creditorId], references: [id])
  creditorId        String    @db.Uuid
  totalAmountLoan   Int
  loanRepaymentDate DateTime
  interest          Int

  @@map(name: "loans")
}

model Debtors {
  id           String  @id @default(uuid()) @db.Uuid
  users        Users   @relation(fields: [authId], references: [id], onDelete: Cascade)
  authId       String  @db.Uuid
  creditRating Int
  Loans        Loans[]

  @@map(name: "debtors")
}

model Creditors {
  id     String  @id @default(uuid()) @db.Uuid
  users  Users   @relation(fields: [authId], references: [id], onDelete: Cascade)
  authId String  @db.Uuid
  Loans  Loans[]

  @@map(name: "creditor")
}
